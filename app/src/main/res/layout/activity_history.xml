<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFFFF"
    tools:context="com.example.ryo.jobot_to626.HistoryActivity">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">

        <TextView
            android:text="Your active chats are:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelMatches"
            android:textSize="30sp"
            android:textAlignment="center" />

        <ImageView
            android:src="@drawable/robot_three"
            android:layout_width="180dp"
            android:layout_marginLeft="170dp"
            android:layout_height="180dp"
            android:id="@+id/imageView5"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <TextView
                android:text="Name 1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/matchPercent1"
                android:textSize="20sp" />

            <TextView
                android:text="Profession 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchText1"
                android:layout_weight="0.85"
                android:textSize="20sp"
                android:textAlignment="center"
                />

            <Button
                android:text="i"
                android:textColor="#B3B4B4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg_round"
                android:id="@+id/infoButton1"
                android:textStyle="normal|bold" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Name 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name2"
                android:textSize="20sp" />

            <TextView
                android:text="Profession 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profession2"
                android:layout_weight="0.85"
                android:textSize="20sp"
                android:textAlignment="center" />

            <Button
                android:text="i"
                android:textColor="#B3B4B4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg_round"
                android:id="@+id/infoButton2"
                android:textStyle="normal|bold" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Name 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name3"
                android:textSize="20sp" />

            <TextView
                android:text="Profession 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profession3"
                android:layout_weight="8.59"
                android:textSize="20sp"
                android:textAlignment="center" />

            <Button
                android:text="i"
                android:textColor="#B3B4B4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg_round"
                android:id="@+id/infoButton3"
                android:textStyle="normal|bold" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Name 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name4"
                android:textSize="20sp" />

            <TextView
                android:text="Profession 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profession4"
                android:layout_weight="8.59"
                android:textSize="20sp"
                android:textAlignment="center" />

            <Button
                android:text="i"
                android:textColor="#B3B4B4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg_round"
                android:id="@+id/infoButton4"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1" />

    </LinearLayout>


</RelativeLayout>
