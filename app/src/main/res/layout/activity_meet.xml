<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ryo.jobot_to626.MeetActivity">

    <TextView
        android:text="Menu Buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Lawyers matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelMatches"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="John D."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchText1"
                android:layout_weight="0.85"
                android:textSize="24sp"
                android:onClick="onClick"
                android:clickable="true"
                android:textAlignment="viewStart" />

            <ImageView
                android:src="@mipmap/add_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2" />

            <Space
                android:layout_weight="0.10"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <Button
                android:text="i"
                android:textColor="#B3B4B4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg_round"
                android:id="@+id/infoButton1"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Michael M."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchText2"
                android:layout_weight="0.81"
                android:textSize="24sp"
                android:textAlignment="viewStart"
                android:onClick="onClick"
                android:clickable="true"/>

            <ImageView
                android:src="@mipmap/add_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3" />

            <Space
                android:layout_weight="0.10"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <Button
                android:text="i"
                android:textColor="#B3B4B4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg_round"
                android:id="@+id/infoButton2"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Henry K."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchText3"
                android:layout_weight="0.92"
                android:textSize="24sp"
                android:textAlignment="viewStart"
                android:onClick="onClick"
                android:clickable="true"/>

            <ImageView
                android:src="@mipmap/add_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4" />

            <Space
                android:layout_weight="0.10"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <Button
                android:text="i"
                android:textColor="#B3B4B4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg_round"
                android:id="@+id/infoButton3"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1" />

    </LinearLayout>


</RelativeLayout>
